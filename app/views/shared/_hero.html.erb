<section class="hero_section">
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item img-fluid active">
        <%= image_tag 'engineering.jpg', class: 'd-block w-100 carousel_image' %>
        <div class="carousel-caption text-left text-light d-none d-md-block">
          <h1>Do you have what it takes to be a Software Engineer!</h1>
          <p>Gain the skills you need to get hired by global companies or start your own Software business.</p>
        </div>
      </div>
      <div class="carousel-item img-fluid">
        <%= image_tag 'coding_lecture.jpg', class: 'd-block w-100 carousel_image' %>
        <div class="carousel-caption text-light d-none d-md-block">
          <h2>Get unlimited access to courses and material essential to be a professional Software Engineer.</h2>
          <p>All you need is the willingness to learn and grow.</p>
        </div>
      </div>
      <div class="carousel-item img-fluid">
        <%= image_tag 'one_on_one_lectures.jpg', class: 'd-block w-100 carousel_image' %>
        <div class="carousel-caption text-light d-none d-md-block">
          <h3>Get One-On-One live sessions with industry experts in the Industry.</h3>
          <p>We offer mentorship opportunities to help you profoundly develop both technical and soft skills to help you succeed in the Tech industry  </p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>
