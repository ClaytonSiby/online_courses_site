<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-12 col-md-4 col-lg-3">
        <p>
          <span class="text-warning">Title:</span> <%= category.name %>
        </p>
        <p>
          <span><%= link_to 'Show', category %></span>
          <span><%= link_to 'Edit', edit_category_path(category) %></span>
          <span><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </p>
      </div>
    <% end %>

    <div class="col-12">
      <p><%= link_to 'New Category', new_category_path %></p>
    </div>
  </div>
</div>
