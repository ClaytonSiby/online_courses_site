<div class="container courses_container p-3">
  <div class="row">
    <div class="col-12 p-0">
      <h2>Get Started </h2>
    </div>

    <% @courses.each do |course| %>
      <div class="col-xs-12 col-sm-6 col-md-4 card p-0 g-2">
        <%= cl_image_tag(course.image.full_public_id, :format => "jpg", :width => '100%', :height => 200) %>
        <div class="card-body">
          <h4 class="card-title"><%= course.title %></h4>
          <p class="card-text">
            Description: <%= course.description %>
          </p>
          <p class="card-text">
            <span>
              USD$ <%= course.pricing %>
            </span>
            <span>&nbsp;
              <%= link_to 'View Details', course %>
            </span>
          </p>
          <% if current_user.superadmin_role %>
            <p>
              <%= link_to 'Edit', edit_course_path(course) %>
            </p>
            <p>
              <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="admin">
      <% if current_user.superadmin_role %>
        <%= link_to 'New Course', new_course_path %>
      <% end %>
    </div>
  </div>
</div>
